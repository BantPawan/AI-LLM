# Dockerfile.ollama
FROM ollama/ollama:latest

# Copy model definition and startup script
COPY Modelfile      /root/.ollama/Modelfile
COPY start-ollama.sh /start-ollama.sh
RUN chmod +x /start-ollama.sh

# Expose Ollama API port (fixes "No open ports detected")
EXPOSE 11434

# Run the startup script directly
ENTRYPOINT ["/start-ollama.sh"]
